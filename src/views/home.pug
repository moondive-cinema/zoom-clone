doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Moom Chat
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header
            h1 MOOM 
            div.Move
                button(type="button" onclick="location.href='/vcall/'") Move to Video Call
        main
            div#welcome
                form#enter
                    input#room(placeholder="room name", type="text", required)
                    input#nick(placeholder="nick name", type="text", required)
                    button Enter Room
                h4 Open Rooms:
                ul#openRooms
            div#chatRoom
                h3 
                ul#chat 
                form#msg
                    input(placeholder="write message", type="text", required)
                    button Send
        script(src="/socket.io/socket.io.js") 
        script(src="/public/js/app.js") 